<% provide(:title, 'Post a Log') %>
<%= content_for :navigation do %>
  <%= render 'log_nav' %>
<% end %>

<section class="log box">
  <h1>Upload a Log</h1>
  <p>
    If you want your comments marked up or styled, please use the '#'
    character at the beginning of the line.
  </p>
  <br />
  <fieldset class="form">
    <legend>New Log Form</legend>
    <%= form_for @log do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <% if User.levels[current_user.level] > 0 %>
        <%= f.label :level, 'Log Visibility:' %>
        <%= f.select :level do %>
          <% [['Public - All visitors and account holders', 0],
              ['Private - Trusted account holders', 1],
              ['BSC Only - Only BSC members', 2],
              ['Admin Only - Only administrators', 3]].each do |choice| -%>
            <%= content_tag(:option, choice.first, value: choice.last) \
                  if User.levels[current_user.level] >= choice.last %>
          <% end %>
        <% end %>
      <% end %>

      <%= f.label :log_file, 'Log file' %>
      <%= f.file_field :log_file %>

      <%= button_tag type: 'submit', class: 'btn', name: 'commit' do %>
        <%= icon('upload fa-fw', 'Upload your log!') %>
      <% end %>
    <% end %>
  </fieldset>
</section>
