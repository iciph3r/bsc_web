<section class="forum comment">
  <header class="header">
    <h2><%= comment.user.name %>:</h2>
    <small>
      <%= comment.created_at.strftime('(%-d %b %Y %-I:%M %p)') %>
    </small>
    <span class="pull-right">
      <%= link_to(icon('edit', 'Edit'),
      edit_topic_comment_path(topic, comment)) if current_user?(comment.user) %>
    </span>
  </header>
  <p>
    <%= comment.content %>
  </p>
</section>
