<section class="forum comment">
  <header class="header">
    <h2><%= comment.user.name %>:</h2>
    <small>
      <%= comment.created_at.strftime('(%-d %b %Y %-I:%M %p)') %>
    </small>
    <span class="pull-right">
      <%= link_to(icon('edit', 'Edit'),
          polymorphic_path([comment.commentable, comment],
                           action: :edit)) if current_user?(comment.user) %>
    </span>
  </header>
    <%= simple_format comment.content %>
</section>
