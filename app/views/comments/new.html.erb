<%= provide(:title, 'New Comment') %>
<% content_for :navigation do %>
  <%= render 'topics/topics_nav' %>
<% end %>

<section class="comment-new">
  <h1>New Comment</h1>
  <fieldset class="form">
    <legend>Comment Form</legend>
    <%= form_for [@context, @comment] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :content, 'Comment:' %>
      <%= f.text_area :content, placeholder: 'Enter your comment...' %>

      <%= button_tag type: 'submit', class: 'btn', name: 'commit' do %>
        <%= icon('comment fa-fw', 'Submit Comment') %>
      <% end %>
    <% end %>
  </fieldset>
</section>
