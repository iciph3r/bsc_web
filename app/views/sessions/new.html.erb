<% provide(:title, 'Login') %>
<% content_for :navigation do %>
  <%= render 'pages/pages_nav' %>
<% end %>

<section class="users">
  <h1>Log In</h1>
  <fieldset class="form">
    <legend>Login Form</legend>
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :password %>
      <%= link_to ' (Forgot Password?)', new_password_reset_path %>
      <%= f.password_field :password %>

      <%= button_tag type: 'submit', name: 'commit', class: 'btn' do %>
        <%= icon('sign-in', 'Log in') %>
      <% end %>
      
      <%= hidden_field_tag :url, params[:url] %>
    <% end %>
    <br />
    <span class="center">
      New user? <%= link_to 'Create an account!', signup_path %>
    </span>
  </fieldset>
</section>
