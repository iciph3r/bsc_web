<section class="comment">
  <header class="header">
    <h2><%= comment.user.name %>:</h2>
    <span class="pull-right">
      <%= link_to(icon('edit', 'Edit'),
          polymorphic_path([comment.commentable, comment],
                           action: :edit)) if current_user?(comment.user) %>
    </span>
  </header>
    <%= simple_format comment.content %>
    <div class="footer">
      <%= comment.created_at.strftime('Posted: %-d %b %Y %-I:%M %p') %>
      <% if comment.created_at != comment.updated_at %>
        <%= comment.updated_at.strftime('& updated: %-d %b %Y %-I:%M %p') %>
      <% end %>
    </div>
</section>
