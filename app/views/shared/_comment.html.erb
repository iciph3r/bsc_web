<section class="comment">
  <h1><strong><%= comment.user.name %></strong> commented on
      <%= comment.created_at.strftime('%-d %b %Y %-I:%M %p') %>
    <span class="pull-right">
      <%= link_to(icon('edit', 'Edit'),
                  edit_comment_path(comment)) if current_user?(comment.user) %>
    </span>
  </h1>
    <%= simple_format comment.content %>
</section>
